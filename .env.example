# ======================================
# TELEGRAM FITNESS APP - ENVIRONMENT VARIABLES
# ======================================
# Copy this file to .env and fill in your actual values
# Command: cp .env.example .env

# ======================================
# APPLICATION SETTINGS
# ======================================
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# ======================================
# DATABASE CONFIGURATION
# ======================================
# For development with SQLite (default)
DB_FILE=telegram_fitness.db

# For production with PostgreSQL (uncomment and configure)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=postgres
# DB_PASSWORD=your_secure_password_here
# DB_DATABASE=telegram_fitness_db

# Database type: 'sqlite' for development, 'postgres' for production
DB_TYPE=sqlite

# ======================================
# JWT AUTHENTICATION
# ======================================
# Generate a secure random string for production
# Example: openssl rand -base64 32
JWT_SECRET=change_this_to_a_secure_random_string_at_least_32_characters_long
JWT_EXPIRES_IN=7d

# ======================================
# OPENAI API
# ======================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here
# Model options: gpt-4, gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-4

# ======================================
# TELEGRAM BOT
# ======================================
# Get your bot token from: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
# Optional webhook URL for production (leave empty to use polling)
TELEGRAM_WEBHOOK_URL=

# ======================================
# CORS SETTINGS
# ======================================
# Comma-separated list of allowed origins
# Example: http://localhost:3000,https://yourdomain.com
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# ======================================
# OPTIONAL SETTINGS
# ======================================
# Logging level: debug, info, warn, error
LOG_LEVEL=info

# Rate limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ======================================
# STRIPE PAYMENT PROCESSING
# ======================================
# Get your keys from: https://dashboard.stripe.com/apikeys
# Test mode keys start with sk_test_ and pk_test_
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
# Webhook secret for verifying webhooks (get from Stripe dashboard)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ======================================
# SUBSCRIPTION SETTINGS
# ======================================
# Free tier: number of workouts allowed per rolling month
FREE_WORKOUTS_PER_MONTH=3
# Premium tier: monthly subscription price
PREMIUM_PRICE_MONTHLY=9.99
# Currency code (ISO 4217): usd, eur, gbp, etc.
PREMIUM_CURRENCY=eur
